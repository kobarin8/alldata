package rpg;

public class hero1 {

	String name;
	int hp;
	void attack(){}
	void run(){}
	void sit(int sec){
		this.hp +=sec;
		System.out.println(this.name+"は、"+sec+"秒座った！");
		System.out.println("HPが"+sec+"ポイント回復した");
	}
	void slip(){}
	void sleep(){
		this.hp=100;
		System.out.println(this.name+"は、眠って回復した！");
	}


}
